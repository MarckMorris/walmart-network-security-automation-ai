[flake8]
max-line-length = 120
max-complexity = 10
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .venv,
    venv,
    frontend-dashboard,
    node_modules,
    automation-showcase

# Error codes to ignore
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    W504   # line break after binary operator

# Select specific error codes to check
select = E,W,F,C

per-file-ignores =
    __init__.py:F401
    */migrations/*.py:E501
